{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:2000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome Editor",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:2000/?editor=yes",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:2000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Edge Editor",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:2000/?editor=yes",
            "webRoot": "${workspaceFolder}"
        }
    ]
}